# SQL Server connection strings for SQLAlchemy + pyodbc
# Example:
# ASSET_MANAGEMENT_DB_URL=mssql+pyodbc://user:pass@server/AssetManagementDB?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes
# TIMEAPP_DB_URL=mssql+pyodbc://user:pass@server/TimeAppDB?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes

ASSET_MANAGEMENT_DB_URL=
TIMEAPP_DB_URL=

# Optional app settings
ASSET_MANAGEMENT_PORT=5001
LOCAL_ADMIN_PASSWORD=change-me-now
SESSION_SIGNING_SECRET=change-this-to-a-long-random-secret-min-32-chars

# CORS
# Comma-separated allowlist; do not use * in production.
CORS_ALLOW_ORIGINS=http://127.0.0.1,http://localhost,http://127.0.0.1:5001,http://localhost:5001
CORS_ALLOW_CREDENTIALS=true

# Login hardening (defaults shown)
AUTH_ATTEMPT_WINDOW_SECONDS=300
AUTH_MAX_ATTEMPTS_PER_IP=50
AUTH_MAX_ATTEMPTS_PER_ACCOUNT=8
AUTH_LOCKOUT_SECONDS=900

# Employee API (read-only integration)
# Put secrets only in local .env (never commit tokens to git).
EMPLOYEE_API_BASE_URL=http://common.subcpartner.com
EMPLOYEE_API_SWAGGER_JSON_URL=http://common.subcpartner.com/swagger/v1/swagger.json
EMPLOYEE_API_TOKEN=replace-with-local-secret
# Auth header/scheme can be adjusted after confirming API contract in Swagger.
EMPLOYEE_API_AUTH_HEADER=Authorization
EMPLOYEE_API_AUTH_SCHEME=
